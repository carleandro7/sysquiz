<%= form_with(model: [:admin, prova], local: true, class: 'mt-3', data: { turbo: false }) do |form| %>
  <% if prova.errors.any? %>
    <div class="alert alert-danger">
      <h5>Erros ao salvar:</h5>
      <ul>
        <% prova.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-3">
    <%= form.label :titulo, 'Título', class: 'form-label' %>
    <%= form.text_field :titulo, class: 'form-control', required: true %>
  </div>
  <div class="mb-3">
    <%= form.label :descricao, 'Descrição', class: 'form-label' %>
    <%= form.text_area :descricao, class: 'form-control', rows: 3 %>
  </div>

  <div class="mb-3">
    <%= form.label :data_inicio, 'Data e hora de início', class: 'form-label' %>
    <%= form.datetime_local_field :data_inicio, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :data_fim, 'Data e hora de término', class: 'form-label' %>
    <%= form.datetime_local_field :data_fim, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :tempo_limite, 'Tempo limite (horas)', class: 'form-label' %>
    <%= form.number_field :tempo_limite, class: 'form-control', min: 0, step: 1 %>
  </div>

  <h4 class="mt-4">Questões</h4>
  <div id="questaos">
    <%= form.fields_for :questaos do |questao_form| %>
      <%= render 'questao_fields', f: questao_form %>
    <% end %>
    <div class="mb-3">
      <%= link_to_add_association 'Adicionar Questão', form, :questaos, class: 'btn btn-primary', data: { association_insertion: "after" } %>
    </div>
  </div>
  <div class="mb-3">
  <%= form.label :serieano_ids, 'Séries', class: 'form-label' %>
  <%= form.collection_select :serieano_ids, Serieano.includes(:escola).all, :id, :nome_com_escola, { prompt: 'Selecione as séries' }, { class: 'form-select', multiple: true, required: true } %>
  </div>
  <%= form.submit class: 'btn btn-success' %>
<% end %>

