<div class="container mt-4">
  <h1 class="mb-4">Provas</h1>
  <div class="mb-3">
    <%= link_to 'Nova Prova', new_admin_prova_path, class: 'btn btn-success' %>
  </div>
  <table class="table table-hover table-bordered bg-white rounded shadow">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Título</th>
        <th>Descrição</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @provas.each do |prova| %>
        <tr>
          <td><%= prova.id %></td>
          <td><%= prova.titulo %></td>
          <td><%= prova.descricao %></td>
          <td><%= link_to 'Ver', admin_prova_path(prova), class: 'btn btn-sm btn-primary me-2' %> </td>
          <td><%= link_to 'Editar', edit_admin_prova_path(prova), class: 'btn btn-sm btn-warning me-2' %> </td>
          <td><%= button_to 'Excluir', admin_prova_path(prova), method: :delete, data: { turbo_confirm: 'Tem certeza?' }, class: 'btn btn-sm btn-danger' %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
