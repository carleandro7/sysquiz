
<%= form_with(model: [:admin, aluno], local: true, class: 'mt-3') do |form| %>
<% if form.object.errors.any? %>
  <div class="alert alert-danger">
    <h4>Erros ao salvar:</h4>
    <ul>
      <% form.object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
  <div class="mb-3">
    <%= form.label :nome, 'Nome', class: 'form-label' %>
    <%= form.text_field :nome, class: 'form-control', required: true %>
  </div>
  <div class="mb-3">
    <%= form.label :email, 'Email', class: 'form-label' %>
    <%= form.email_field :email, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :username, 'Usuário', class: 'form-label' %>
    <%= form.text_field :username, class: 'form-control', required: true %>
  </div>
  <div class="mb-3">
    <%= form.label :password, 'Senha', class: 'form-label' %>
    <%= form.password_field :password, class: 'form-control', required: action_name == 'new' %>
  </div>
  <div class="mb-3">
    <%= form.label :serieano_id, 'Série', class: 'form-label' %>
    <%= form.collection_select :serieano_id, Serieano.includes(:escola).all, :id, lambda { |s| "#{s.escola.nome} - #{s.nome}" }, { prompt: 'Selecione a série' }, class: 'form-select', required: true %>
  </div>
  <%= form.submit class: 'btn btn-success' %>
<% end %>
