<div class="container mt-4">
  <h1 class="mb-4">Alunos</h1>
  <div class="mb-3">
    <%= link_to 'Novo Aluno', new_admin_aluno_path, class: 'btn btn-success' %>
  </div>
  <table class="table table-hover table-bordered bg-white rounded shadow">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Usuário</th>
        <th>Série</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @alunos.each do |aluno| %>
        <tr>
          <td><%= aluno.id %></td>
          <td><%= aluno.nome %></td>
          <td><%= aluno.username %></td>
          <td><%= aluno.serieano&.nome %></td>
          <td>
            <%= link_to 'Ver', admin_aluno_path(aluno), class: 'btn btn-sm btn-primary' %>
            <%= link_to 'Editar', edit_admin_aluno_path(aluno), class: 'btn btn-sm btn-warning' %>
            <%= link_to 'Excluir', admin_aluno_path(aluno), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-sm btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
