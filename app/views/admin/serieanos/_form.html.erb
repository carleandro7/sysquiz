<%= form_with(model: [:admin, serieano], local: true, class: 'mt-3') do |form| %>
  <div class="mb-3">
    <%= form.label :nome, 'Nome', class: 'form-label' %>
    <%= form.text_field :nome, class: 'form-control', required: true %>
  </div>
  <div class="mb-3">
    <%= form.label :escola_id, 'Escola', class: 'form-label' %>
    <%= form.collection_select :escola_id, Escola.all, :id, :nome, { prompt: 'Selecione a escola' }, class: 'form-select', required: true %>
  </div>
  <%= form.submit class: 'btn btn-success' %>
<% end %>
