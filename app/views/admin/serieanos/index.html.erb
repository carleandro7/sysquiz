<div class="container mt-4">
  <h1 class="mb-4">Séries</h1>
  <div class="mb-3">
    <%= link_to 'Nova Série', new_admin_serieano_path, class: 'btn btn-success' %>
  </div>
  <table class="table table-hover table-bordered bg-white rounded shadow">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Escola</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @serieanos.each do |serieano| %>
        <tr>
          <td><%= serieano.id %></td>
          <td><%= serieano.nome %></td>
          <td><%= serieano.escola&.nome %></td>
          <td>
            <%= link_to 'Ver', admin_serieano_path(serieano), class: 'btn btn-sm btn-primary' %>
            <%= link_to 'Editar', edit_admin_serieano_path(serieano), class: 'btn btn-sm btn-warning' %>
            <%= button_to 'Excluir', admin_serieano_path(serieano), method: :delete, data: { turbo_confirm: 'Tem certeza?' }, class: 'btn btn-sm btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
