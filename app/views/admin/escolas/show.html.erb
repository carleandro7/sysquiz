<div class="container mt-4">
  <h1>Escola: <%= @escola.nome %></h1>
  <p><strong>ID:</strong> <%= @escola.id %></p>
  <p><strong>Instituição:</strong> <%= @escola.instituica&.nome %></p>
  <div class="mt-3">
    <%= link_to 'Editar', edit_admin_escola_path(@escola), class: 'btn btn-warning' %>
    <%= link_to 'Voltar', admin_escolas_path, class: 'btn btn-secondary' %>
  </div>
</div>
