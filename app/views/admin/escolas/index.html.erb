<div class="container mt-4">
  <h1 class="mb-4">Escolas</h1>
  <div class="mb-3">
    <%= link_to 'Nova Escola', new_admin_escola_path, class: 'btn btn-success' %>
  </div>
  <table class="table table-hover table-bordered bg-white rounded shadow">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Instituição</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @escolas.each do |escola| %>
        <tr>
          <td><%= escola.id %></td>
          <td><%= escola.nome %></td>
          <td><%= escola.instituica&.nome %></td>
          <td>
            <%= link_to 'Ver', admin_escola_path(escola), class: 'btn btn-sm btn-primary' %>
            <%= link_to 'Editar', edit_admin_escola_path(escola), class: 'btn btn-sm btn-warning' %>
            <%= button_to 'Excluir', admin_escola_path(escola), method: :delete, data: { turbo_confirm: 'Tem certeza?' }, class: 'btn btn-sm btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
