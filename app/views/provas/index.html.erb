<% content_for :title, "Provas" %>

<h1 class="display-4 text-center text-warning mb-5 mt-4">Provas</h1>

<div class="row g-4">
  <% @provas.each do |prova| %>
    <div class="col-12 col-sm-6 col-md-4">
      <div class="card card-quiz h-100 shadow-lg border-0">
        <div class="card-body d-flex flex-column justify-content-between">
          <div>
            <div class="d-flex align-items-center mb-2">
              <span class="fs-3 me-2">üìù</span>
              <span class="fw-bold fs-5 text-light"><%= prova.titulo %></span>
            </div>
            <div class="text-light mb-2"><%= prova.descricao %></div>
            <div class="text-secondary small mb-2">In√≠cio: <%= prova.data_inicio&.strftime('%d/%m/%Y') %> | Fim: <%= prova.data_fim&.strftime('%d/%m/%Y') %></div>
          </div>
          <div class="mt-3">
            <%= link_to "Ver Prova", prova, class: "btn btn-warning w-100 fw-bold" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="d-flex justify-content-center mt-4">
  <%= link_to "Nova Prova", new_prova_path, class: "btn btn-success btn-lg fw-bold" %>
</div>
