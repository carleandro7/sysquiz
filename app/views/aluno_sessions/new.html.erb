<div class="flex justify-center items-center min-h-[60vh]">
  <div class="bg-gradient-to-br from-pink-500 via-purple-600 to-blue-600 rounded-2xl shadow-2xl p-8 w-full max-w-md">
    <h1 class="text-2xl font-extrabold text-yellow-300 mb-6 flex items-center justify-center"><span class="mr-2">ðŸ”’</span>Login do Aluno</h1>
    <%= form_with url: aluno_login_path, method: :post, local: true do %>
      <div class="mb-4">
        <%= label_tag :username, "UsuÃ¡rio", class: "block text-white font-bold mb-1" %>
        <%= text_field_tag :username, nil, class: "w-full rounded-lg px-3 py-2 text-purple-900 focus:outline-none focus:ring-2 focus:ring-yellow-300" %>
      </div>
      <div class="mb-6">
        <%= label_tag :password, "Senha", class: "block text-white font-bold mb-1" %>
        <%= password_field_tag :password, nil, class: "w-full rounded-lg px-3 py-2 text-purple-900 focus:outline-none focus:ring-2 focus:ring-yellow-300" %>
      </div>
      <%= submit_tag "Entrar", class: "w-full bg-yellow-300 hover:bg-yellow-200 text-purple-900 font-extrabold text-lg px-6 py-3 rounded-xl shadow-lg transition" %>
    <% end %>
    <% if flash[:alert] %>
      <div class="mt-4 bg-red-200 border border-red-400 text-red-800 px-4 py-2 rounded animate-bounce-in">
        <%= flash[:alert] %>
      </div>
    <% end %>
  </div>
</div>
